@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using(Html.BeginForm("EditExperience","Experience",FormMethod.Post)){
       <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Deneyim Düzenleme </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>#</label>
                        @Html.TextBoxFor(x=>x.ExperienceId,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                         @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                         @Html.TextBoxFor(x=>x.Date,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Resim</label>
                         @Html.TextBoxFor(x=>x.ImageUrl,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                         @Html.TextAreaFor(x=>x.Decription,10,3,new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}


