@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Deneyimler</h4>
                    </p>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Resim</th>
                            <th>Tanım</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                          <tr>
                            <td>@item.Name</td>
                            <td>@item.Date</td>
                            <td>@item.ImageUrl</td>
                            <td>@item.Decription</td>
                            <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Experience/EditExperience/@item.ExperienceId" class="btn btn-outline-warning">Düzenle</a></td>
                          </tr>
                          }
                        </tbody>
                      </table>
                      <br />
                      <td><a href="/Experience/AddExperience/" class="btn btn-outline-success">Ekle</a></td>
                    </div>
                  </div>
                </div>
              </div>
