@using EntityLayer.Concrete
@model List<Service>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Listesi</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="budget">Başlık</th>
                <th scope="col" class="sort" data-sort="status">Görsel</th>
                <th scope="col">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">
            @if (Model == null)
            {
                <p>Model bulunamadı.</p>
            }
            else
            {
            <tbody class="list">
                    @foreach (var item in Model)
                    {
                    <tr>  
                        <td>@item.Title</td>
                        <td>@item.ImageUrl</td>
                        <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Service/EditService/@item.ServiceId" class="btn btn-outline-warning">Güncelle</a></td>
                    </tr>
                    }
            </tbody>

            }
    </table>
    <a href="/Service/AddService/" class="btn btn-outline-success">Ekle</a>
</div>




