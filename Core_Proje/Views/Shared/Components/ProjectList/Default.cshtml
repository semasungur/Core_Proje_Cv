@using EntityLayer.Concrete
@model List<Portfolio>


<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Proje Listesi</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> #</th>
                                <th> Proje Adı</th>
                                <th> Url</th>
                                <th> Platform </th>
                                <th> Tamamlanma Oranı </th>
                                <th> Durum </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                            <tr>
                                <td> @item.PortfolioId </td>
                                <td>
                                    <img src="@item.ImageUrl" alt="image" />
                                    <span class="pl-2">@item.Name</span>
                                </td>
                                <td> @item.ProjectUrl </td>
                                <td> @item.Platform </td>
                                <td> % @item.Value </td>
                                <td>
                                  <a href="/Portfolio/EditPortfolio/@item.PortfolioId"><div class="badge badge-outline-success">Detayları Gör</div></a> 
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>