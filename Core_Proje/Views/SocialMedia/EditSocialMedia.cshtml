@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Sosyal Medya Düzenleme </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>#</label>
                        @Html.TextBoxFor(x=>x.SocialMediaId,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Url</label>
                        @Html.TextBoxFor(x=>x.Url,new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Resim</label>
                        @Html.TextBoxFor(x=>x.Icon,new {@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}

