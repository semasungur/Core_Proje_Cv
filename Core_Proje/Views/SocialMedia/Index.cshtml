@using EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Sosyal Medya</h4>
                    </p>
                    <div class="table-responsive">
                      <table class="table">
                        <thead>
                          <tr>
                            <th>Başlık</th>
                            <th>Url</th>
                            <th>İkon</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                          </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                          <tr>
                            <td>@item.Name</td>
                            <td>@item.Url</td>
                            <td>@item.Icon</td>
                            <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/SocialMedia/EditSocialMedia/@item.SocialMediaId" class="btn btn-outline-warning">Düzenle</a></td>
                          </tr>
                          }
                        </tbody>
                      </table>
                      <br />
                      <td><a href="/SocialMedia/AddSocialMedia/" class="btn btn-outline-success">Ekle</a></td>
                    </div>
                  </div>
                </div>
              </div>


