@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
@using(Html.BeginForm("EditTestimonial","Testimonial",FormMethod.Post)){
  <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Referans Düzenleme </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>#</label>
                        @Html.TextBoxFor(x=>x.TestimonialId,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.ClientName,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Şirket</label>
                         @Html.TextBoxFor(x=>x.Company,new{@class="form-control"})
                    </div>
                      <div class="form-group">
                        <label>Ünvan</label>
                         @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
                    </div>
                      <div class="form-group">
                        <label>Yorum</label>
                         @Html.TextAreaFor(x=>x.Comment,10,3,new{@class="form-control"})
                    </div>
                      <div class="form-group">
                        <label>Resim</label>
                         @Html.TextBoxFor(x=>x.ImageUrl,new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
              
                </form>
            </div>
        </div>
    </div>

}


